        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme"
        tools:replace="android:icon">
        <activity android:name=".View.Activities.MainActivity" />
        <activity
            android:name=".View.Activities.ViewBirthday"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.BirthdayInfoActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.HoroscopActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity android:name=".View.Activities.RegistrationActivity" />
        <activity
            android:name=".View.Activities.ChineseZodiacActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.MayanHoroscopActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.CelticHoroscopActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.NextBirthdayActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity android:name=".View.Activities.HoroscopActivityDetails" />
        <activity
            android:name=".View.Activities.AboutActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.OtherApps"
            android:theme="@style/MyMaterialTheme2" />
        <activity android:name=".View.Activities.SettingsActivity" />
        <activity android:name=".View.Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Activities.ListPeopleActivity" />
        <activity android:name=".View.Activities.AddNewPeopleActivity" />
        <activity
            android:name=".View.Activities.ArabianHoroscopoActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity
            android:name=".View.Activities.InduHoroscopActivity"
            android:theme="@style/MyMaterialTheme2" />
        <activity android:name=".View.Activities.LoveCalculatorActivity"></activity>
    </application>

